<h1><%= @auction.title %></h1>
<p><%= @auction.description %></p>
<% if @auction.draft? %>
  <p>
    Auction is in draft mode
    <%= link_to 'Publish', auction_publishings_path(@auction),
                           method: :post,
                           data: { confirm: 'Are you sure?' } %>
  </p>
<% elsif @auction.published? %>
  <p>auction is published</p>
<% end %>
